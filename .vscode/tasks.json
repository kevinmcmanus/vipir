{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RunAnimation",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": ["${workspaceFolder}/src/pwr_animate.py",
                    "WI937cache", "--data_dir", "${workspaceFolder}/data"]
        },
        {
            "label": "BuildCache",
            "type": "shell",
            "command": "${config:python.pythonPath}",
            "args": ["${workspaceFolder}/src/mkcache.py",
                    "WI937", "2020-08-01T17:30:00","2020-08-02T17:30:00",
                    "${workspaceFolder}/data/WI937cache",
                    "--interval","60"]
        },
        {
            "label": "PWD",
            "type": "shell",
            "command": "echo `pwd`"
        }
    ]
}